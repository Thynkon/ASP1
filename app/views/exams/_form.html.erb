<%= form_with(model: exam, url: [exam.course, exam],html: {class: "flex flex-col space-y-4"}) do |form| %>
  <% if exam.errors.any? %>
    <% exam.errors.each do |error| %>
      <%= render "shared/message", message: error.full_message, type: "error" %>
    <% end %>
  <% end %>

  <div class="flex flex-col w-full basis-full">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
  </div>

  <div class="flex flex-col w-full basis-full">
    <%= form.label :weight, style: "display: block" %>
    <%= form.text_field :weight, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
  </div>

  <%= form.submit class: "submit-button mt-4" %>
<% end %>
