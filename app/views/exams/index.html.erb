<p style="color: green"><%= notice %></p>

<h1 class="h1">Exams</h1>

<div class="w-full flex flex-col items-center">
  <div class="flex flex-col space-y-4 w-full max-w-2xl">
    <div id="exam" class="flex flex-col space-y-4">
      <% @exams.each do |exam| %>
        <div class="border border-gray-200 rounded-md p-2">
          <%= render exam %>
          <p>
            <%= link_to "Show this exam", exam, class: "link" %>
          </p>
        </div>
      <% end %>
    </div>

    <%= link_to "New exam", new_exam_path, class: "submit-button" %>
  </div>
</div>