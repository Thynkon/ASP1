<h1 class="h1">Courses</h1>

<div class="w-full flex flex-col items-center">
  <div class="flex flex-col space-y-4 w-full max-w-2xl">
    <div id="courses" class="flex flex-col space-y-4">
      <% @courses.each do |course| %>
        <div class="border border-gray-200 rounded-md p-2">
          <%= render course %>
          <p>
            <%= link_to "Show this course", course, class: "link" %>
          </p>
        </div>
      <% end %>
    </div>

    <%= link_to "New course", new_course_path, class: "submit-button" %>
  </div>
</div>
