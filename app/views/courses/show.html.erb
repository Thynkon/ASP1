<% flash.each do |type, msg| %>
  <%= render "shared/message", message: msg, type: type %>
<% end %>

<%= render @course %>

<div>
  <%= link_to "Edit this course", edit_course_path(@course), class: "link" %> |
  <%= link_to "Go back", :back, class: "link" %>
</div>

<div class="flex flex-col space-y-4 space-x-4 items-center w-full max-w-2xl">
  <div class="flex mt-4 space-x-4 w-full">
    <%= link_to "Add exam", new_course_exam_path(@course), class: "submit-button" %>
    <%= button_to "Delete this course", @course, method: :delete, class: "submit-button" %>
  </div>

  <div class="w-full flex flex-col items-center mt-4">
    <h2 class="h2">Exams</h2>
    <div class="flex flex-col space-y-4 w-full max-w-2xl">
      <div id="exam" class="flex flex-col space-y-4">
        <% @course.exams.each do |exam| %>
          <div class="border border-gray-200 rounded-md p-2">
            <%= render exam %>
            <p>
              <%= link_to "Show this exam", exam, class: "link" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>