<%= form_with(model: evaluation, html: {class: "flex flex-col space-y-4 basis-full"}) do |form| %>
  <% if evaluation.errors.any? %>
    <% evaluation.errors.each do |error| %>
      <%= render "shared/message", message: error.full_message, type: "error" %>
    <% end %>
  <% end %>

  <div>
    <%= form.label :grade, style: "display: block" %>
    <%= form.text_field :grade, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
  </div>

  <div class="flex flex-col w-full basis-full">
      <%= form.label :student, style: "display: block" %>
      <%= form.collection_select :student_id, Student.all, :id, :fullname, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
  </div>

  <div class="flex flex-col w-full basis-full">
      <%= form.label :exam, style: "display: block" %>
      <%= form.collection_select :exam_id, current_person.exams, :id, :name, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
  </div>

  <div class="flex flex-col w-full basis-full">
      <%= form.label :student, style: "display: block" %>
      <%= form.collection_select :student_id, Student.all, :id, :fullname, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
  </div>
  <%= form.submit class: "submit-button" %>
<% end %>
