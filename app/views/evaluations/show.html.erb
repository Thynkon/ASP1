<div class="flex flex-col space-y-4 max-w-96">
  <div class="border border-gray-200 rounded-md p-2">
    <%= render @evaluation %>
  </div>

  <div>
    <%= link_to "Edit this evaluation", edit_evaluation_path(@evaluation), class: "link" %> |
    <%= link_to "Back to evaluations", evaluations_path, class: "link" %>

    <%= button_to "Destroy this evaluation", @evaluation, method: :delete, class: "submit-button" %>
  </div>
</div>