<div class="flex w-full items-center justify-center">
  <div>
    <h2 class="text-2xl">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-full flex flex-col space-y-6 md:w-96"}) do |f| %>
      <% flash.each do |type, msg| %>
        <%= render "shared/message", message: msg, type: type %>
      <% end %>

      <div>
        <div>
          <%= f.label :email, class: "block" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
        </div>
      </div>
      <div class="field">
        <div>
          <%= f.label :password, class: "block" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= f.submit "Log in", class: "submit-button" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>