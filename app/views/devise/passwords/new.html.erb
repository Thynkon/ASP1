<div class="flex w-full items-center justify-center">
  <div>
    <h2 class="text-2xl">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "w-full flex flex-col space-y-6 md:w-96"}, data: { turbo: false } ) do |f| %>
      <% flash.each do |type, msg| %>
       <% puts  "TYPE ==> #{type}" %>
        <%= render "shared/message", message: msg, type: type %>
      <% end %>

      <div>
        <div>
          <%= f.label :email, class: "block" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-lg" %>
        </div>
      </div>

      <div class="actions w-full px-4 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded text-lg text-center">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>